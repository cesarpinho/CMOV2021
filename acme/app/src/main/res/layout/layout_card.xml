<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/card_image"
        android:contentDescription="@string/coffee_icon_description"
        android:layout_margin="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amatic_sc"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/colorLight"
        android:id="@+id/card_product_name"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/card_button"
        android:layout_toEndOf="@+id/card_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amatic_sc"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorLight"
        android:id="@+id/card_product_price"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/card_image"
        android:layout_toStartOf="@+id/card_button"
        android:layout_below="@+id/card_product_name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:background="@drawable/button_background"
        android:fontFamily="@font/amatic_sc"
        android:textColor="@color/colorGunmetal"
        android:textSize="18sp"
        android:text="@string/add_cart"
        android:id="@+id/card_button"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorBeige"
        android:layout_below="@+id/card_image"/>

</RelativeLayout>